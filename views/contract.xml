<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- BEGIN view contract form -->
        <record id="account_contract_form_telephony" model="ir.ui.view">
            <field name="name">account.contract.form.telephony</field>
            <field name="model">contract.contract</field>
            <field name="inherit_id" ref="contract.contract_contract_form_view"/>
            <field name="arch" type="xml">
                <xpath expr='//div[@class="oe_title"]' position='after'>
                    <div name="project_contract">
                        <field name="use_telephony" class="oe_inline"/>
                        <label for="use_telephony"/>
                    </div>
                </xpath>
                <xpath expr="//div[@class='oe_chatter']" position="before">
                    <group string="Telephony Info" attrs="{'invisible':[('use_telephony','=',False)]}">
                        <field name="telephony_number_ids" widget="one2many_list" nolabel="1"
                               context="{'contract_id': id}">
                            <tree string="Numbers info" default_order='number_id' editable="bottom">
                                <field name="contract_id" invisible="1"/>
                                <field name="number_id"/>
                                <!-- <field name="contract_line_id" domain="[('analytic_account_id', '=', contract_id)]"/> -->
                                <field name="contract_line_id"/>
                                <field name="login"/>
                                <field name="password"/>
                                <field name="product_id"/>
                                <field name="mac"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
        <!-- END view contract form -->

    </data>
</odoo>
